{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} | La Boutique Française{% endblock %}

{% block stylesheet %}
    <style>
        .product-page-price{
            font-size:19px;
            font-weight:bold;
        }
    </style>
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="image produit" title="image produit" class="img-fluid" />
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }}</h3>
        <p class="product-subtitle">{{ product.subtitle }}</p>
        <span class="product-page-price">{{ (product.prix/100)|number_format(2, ',') }} €</span>
        <hr>
        <p>
            {{ product.description }}
        </p>
        <hr>
        <a href="{{ path('add_to_cart', {'id': product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>
<hr>
<h3>Nos meilleures ventes</h3>
<small>Découvrez les articles les plus vendus</small>
<div class="row">
    {% for product in products %}
        <div class="col">
            {% include 'product/single_product.html.twig' %}
        </div>
    {% endfor %}
</div>
{% endblock %}
