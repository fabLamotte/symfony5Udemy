{% extends 'base.html.twig' %}

{% block title %}nos produits | La Boutique Fran√ßaise{% endblock %}

{% block stylesheet %}
    <style>
        .product-item h5{
            text-transform:uppercase;
            font-size:16px;
        }
        
        .product-item .product-subtitle{
            font-size:14px;
            margin-bottom:18px;
            display:block;
        }
        
        .product-item .product-price{
            font-size:15px;
            font-weight:bold;
        }
    </style>
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3>Filter</h3>
        {{ form(search) }}
    </div>
    <div class="col-md-9">
        <h3>Nos produits</h3>
        <div class="row product-container">
            {% for product in products %}
                <div class="col-md-4">
                    {% include 'product/single_product.html.twig' %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
