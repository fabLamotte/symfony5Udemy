{% extends 'base.html.twig' %}

{% block title %}Mon compte | La boutique Française{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mon compte</h1>
    Bienvenue {{ app.user.firstname }} dans votre compte.<br />
    C'est ici que vous pourrez voir et modifier vos informations
    <hr>
    <a href="{{ path('account_password') }}">Modifier mon mot de passe</a><br />
    <a href="{{ path('account_adresse') }}">Gérer mes adresses</a><br />
    <a href="{{ path('account_order') }}">Mes commandes</a><br />
</div>
{% endblock %}
