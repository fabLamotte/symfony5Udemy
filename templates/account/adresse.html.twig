{% extends 'base.html.twig' %}

{% block title %}Mes adresses | La boutique Française{% endblock %}

{% block content %}
<style>
    .card {
        margin: 15px 0;
    }
</style>
<a href="{{ path('account_adresse_add') }}" class="btn btn-info float-right">Ajouter une adresse</a>
<h1>Mes adresses</h1>
C'est dans cet espace que vous pourrez gérer toutes vos adresses<br />
<a href="{{ path('account') }}">Retour</a>
<hr>
    {% if app.user.adresses|length == 0 %}
        <p class="text-center">Vous n'avez pas encore ajouté d'adresse.</p>
    {% else %}
        <div class="row">
            {% for adresse in app.user.adresses %}
                <div class="card col-md-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ adresse.name }}</h5>
                        <p class="card-text">{{ adresse.adresse }}<br /> 
                        {{ adresse.codePostal }} - {{ adresse.city }} - {{ adresse.pays }}</p>
                        <a href="{{ path('account_adresse_edit', {'id':adresse.id}) }}">Modifier</a> |
                        <a href="{{ path('account_adresse_delete', {'id':adresse.id}) }}">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
